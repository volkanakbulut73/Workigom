
# Server Configuration
NODE_ENV=development
PORT=3001

# Database Configuration
DATABASE_URL="postgresql://workigom_user:workigom_password@localhost:5432/workigom_db?schema=public"

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_here
JWT_REFRESH_EXPIRES_IN=30d

# Email Configuration (Optional - for email verification)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM=noreply@workigom.com

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg,application/pdf

# CORS Configuration
# For development: single origin
# CORS_ORIGIN=http://localhost:5173
# For production: comma-separated list of allowed origins
CORS_ORIGIN=https://workigom.vercel.app,https://workigom-frontend1.onrender.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
